<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.goatsandtigers.crypcross">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CrypCross">
        <activity android:name=".CrypticCrosswordActivity"
            android:configChanges="orientation"
            android:screenOrientation="sensorPortrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainMenuActivity"
            android:configChanges="orientation"
            android:screenOrientation="sensorPortrait" />
        <activity android:name=".ScoreBoardActivity"
            android:configChanges="orientation"
            android:screenOrientation="sensorPortrait" />
        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-7942129400584060~9134341538"/>
    </application>

</manifest>